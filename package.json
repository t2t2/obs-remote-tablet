{
  "name": "obs-tablet-remote",
  "version": "0.0.0",
  "description": "OBS Remote interface that's pretty okay I suppose",
  "homepage": "http://t2t2.github.io/obs-tablet-remote/",
  "repository": "https://github.com/t2t2/obs-tablet-remote",
  "author": "t2t2 <taavot@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "poi build",
    "dev": "poi",
    "lint": "xo"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "sanitize.css": "^5.0.0",
    "sha.js": "^2.4.9",
    "vue": "^2.4.4",
    "vuex": "^2.4.1",
    "vuex-persistedstate": "^2.0.0"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.2",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-vue": "beta",
    "eslint-plugin-import": "^2.7.0",
    "loader-utils": "^1.1.0",
    "node-sass": "^4.5.3",
    "postcss-flexbugs-fixes": "^3.2.0",
    "sass-loader": "^6.0.6",
    "poi": "^9.3.8",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "semicolon": false,
    "plugins": [
      "vue"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extensions": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended"
    ],
    "settings": {
      "import/resolver": "webpack"
    },
    "rules": {
      "vue/no-dupe-keys": "error",
      "vue/no-reserved-keys": "error",
      "vue/no-shared-component-data": "error",
      "vue/no-template-key": "error",
      "vue/require-render-return": "error",
      "vue/require-valid-default-prop": "error",
      "vue/return-in-computed-property": "error",
      "vue/no-async-in-computed-properties": "error",
      "vue/no-duplicate-attributes": "error",
      "vue/no-side-effects-in-computed-properties": "error",
      "vue/order-in-components": "error",
      "vue/attribute-hyphenation": "error",
      "vue/html-quotes": "error",
      "vue/html-self-closing": "error",
      "vue/max-attributes-per-line": "error",
      "vue/mustache-interpolation-spacing": "error",
      "vue/v-bind-style": "error",
      "vue/v-on-style": "error"
    },
    "overrides": [
      {
        "files": "src/store/**/{actions,getters,mutations}.js",
        "rules": {
          "import/prefer-default-export": 0
        }
      }
    ]
  }
}
